<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:na4shtab.PatientApp.ViewModels"
        x:Class="na4shtab.PatientApp.Views.MainWindow"
        Title="PatientApp" Width="900" Height="600"
        x:DataType="vm:MainWindowViewModel">

    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="4">
            <Button Content="Пациенты"   Command="{Binding ShowPatientsCmd}"   Margin="2"/>
            <Button Content="Процедуры"   Command="{Binding ShowProceduresCmd}" Margin="2"/>
            <Button Content="История"     Command="{Binding ShowVisitsCmd}"     Margin="2"/>
        </StackPanel>

        <ContentControl Content="{Binding Current}" />
    </DockPanel>
</Window>
